<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
        <RuntimeIdentifiers>linux-arm;linux-x64</RuntimeIdentifiers>
        <AssemblyName>Monitor</AssemblyName>
        <RootNamespace>Monitor</RootNamespace>
        <PackageId>Monitor</PackageId>
        <Authors>Monitor</Authors>
        <Company>Monitor</Company>
        <Product>Monitor</Product>
    </PropertyGroup>

    <ItemGroup>
      <Content Update="appsettings.Development.json">
        <DependentUpon>appsettings.json</DependentUpon>
      </Content>
      <Content Remove="storage\**" />
      <None Remove="Dockerfile" />
      <Content Include="Dockerfile">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Content>
      <Content Remove="obj\**" />
      <None Remove="obj\**" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="JoySoftware.NetDaemon.App" Version="22.1.12" />
      <PackageReference Include="JoySoftware.NetDaemon.Extensions.Mqtt" Version="23.19.0" />
      <PackageReference Include="JoySoftware.NetDaemon.Extensions.Scheduling" Version="23.19.0" />
      <PackageReference Include="JoySoftware.NetDaemon.Fakes" Version="22.1.12" />
      <PackageReference Include="JoySoftware.NetDaemon.HassModel" Version="23.19.0" />
      <PackageReference Include="JoySoftware.NetDaemon.Runtime" Version="23.19.0" />
      <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="7.0.5">
        <PrivateAssets>all</PrivateAssets>
        <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      </PackageReference>
      <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="7.0.5" />
      <PackageReference Include="System.IO.Ports" Version="7.0.0" />
    </ItemGroup>

    <ItemGroup>
      <Compile Remove="storage\**" />
      <Compile Remove="obj\**" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Remove="storage\**" />
      <EmbeddedResource Remove="obj\**" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="storage\**" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="obj\Debug\net7.0\" />
    </ItemGroup>

    <ItemGroup>
      <_ContentIncludedByDefault Remove="NetDaemonCodegen\EntityMetaData.json" />
      <_ContentIncludedByDefault Remove="NetDaemonCodegen\ServicesMetaData.json" />
    </ItemGroup>

</Project>
