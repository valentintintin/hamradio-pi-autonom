{
  "ConnectionStrings": {
    "Default": "Data Source=storage/data.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "NetDaemon": "Information",
      "System.Net.Http.HttpClient": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "HomeAssistant": {
    "Host": "homeassistant",
    "Port": 8123,
    "Ssl": false,
    "Token": ""
  },
  "CodeGeneration": {
    "Namespace": "Monitor",
    "OutputFile": "HomeAssistantGenerated.cs",
    "UseAttributeBaseClasses" : "false"
  },
  "Mqtt": {
    "Host": "mqtt"
  },
  "System": {
    "Enabled": true,
    "Time": 60000,
    "ShutdownFile": "/tmp/system_shutdown.txt",
    "InfoFile": "/tmp/system_info.json",
    "TimeFile": "/tmp/time.txt"
  },
  "SerialPortMessage": {
    "Enabled": true,
    "Simulate": false,
    "Path": "/dev/ttyS1",
    "Speed": 115200
  },
  "SerialPortLog": {
    "Enabled": true,
    "Simulate": false,
    "Path": "/dev/ttyS2",
    "Speed": 115200
  },
  "Webcam": {
    "Enabled": false,
    "Time": 1000,
    "Url": "http://webcam:8080/?action=snapshot"
  }
}
