@page "/"

@using Monitor.Extensions
@using Monitor.Services
@using System.Text.Json
@using Message = Monitor.Models.SerialMessages.Message

@implements IDisposable

<PageTitle>Tableau de bord</PageTitle>

<h1>Tableau de bord</h1>

<GridRow Gutter="(16, 16)" Justify="center">
    <GridCol Span=8>
        <Card Title="Système">
            <Body>
            <Row>
                <Col Span=12>
                    <Statistic Title="CPU" Value="EntitiesManagerService.Entities.SystemCpu.Value" Suffix="%" />
                </Col>
                <Col Span=12>
                    <Statistic Title="Uptime" Value="EntitiesManagerService.Entities.SystemUptime.Value.ToString()" />
                </Col>
                <Col Span=12>
                    <Statistic Title="RAM" Value="EntitiesManagerService.Entities.SystemRam.Value" Suffix="%" />
                </Col>
                <Col Span=12>
                    <Statistic Title="Disque" Value="EntitiesManagerService.Entities.SystemDisk.Value" Suffix="%" />
                </Col>
            </Row>
            </Body>
        </Card>
    </GridCol>
    <GridCol Span=8>
        <BadgeRibbon Text="@(EntitiesManagerService.Entities.MpptChargeCurrent.Value > 0 ? "En charge" : "En décharge")" 
                     Color="@(EntitiesManagerService.Entities.MpptChargeCurrent.Value > 0 ? "green" : "red")">
            <Card Title="Énergie">
                <Body>
                <Row>
                    <Col Span=12>
                        <Statistic Title="Tension batterie" Value="@(EntitiesManagerService.Entities.BatteryVoltage.Value / 1000.0)" Suffix="V" />
                    </Col>
                    <Col Span=12>
                        <Statistic Title="Tension Panneau" Value="@(EntitiesManagerService.Entities.SolarVoltage.Value / 1000.0)" Suffix="V" />
                    </Col>
                    <Col Span=12>
                        <Statistic Title="Courant batterie" Value="EntitiesManagerService.Entities.BatteryCurrent.Value" Suffix="mA" />
                    </Col>
                    <Col Span=12>
                        <Statistic Title="Courant panneau" Value="EntitiesManagerService.Entities.SolarCurrent.Value" Suffix="mA" />
                    </Col>
                    <Col Offset=8 Span=12>
                        <Statistic Title="Courant de charge" Value="EntitiesManagerService.Entities.MpptChargeCurrent.Value" Suffix="mA" />
                    </Col>
                </Row>
                </Body>
            </Card>
        </BadgeRibbon>
    </GridCol>
    <GridCol Span=8>
        <BadgeRibbon Text="@($"Il fait {(EntitiesManagerService.Entities.SolarIsDay.Value ? "jour" : "nuit")}")" 
                     Color="@(EntitiesManagerService.Entities.SolarIsDay.Value ? "orange" : "darkblue")">
            <Card Title="Météo">
                <Body>
                <Row>
                    <Col Span=12>
                        <Statistic Title="Température" Value="EntitiesManagerService.Entities.WeatherTemperature.Value" Suffix="°C" />
                    </Col>
                    <Col Span=12>
                        <Statistic Title="Humidité" Value="EntitiesManagerService.Entities.WeatherHumidity.Value" Suffix="%" />
                    </Col>
                </Row>
                </Body>
            </Card>
        </BadgeRibbon>
    </GridCol>
    <GridCol Span=8>
        <BadgeRibbon Text="@(EntitiesManagerService.Entities.StatusBoxOpened.Value ? "Boîte ouverte !" : "OK")" 
                     Color="@(EntitiesManagerService.Entities.StatusBoxOpened.Value ? "red" : "")">
            <Card Title="MCU">
                <Body>
                <Row>
                    <Col Span=12>
                        <Statistic Title="État" Value="EntitiesManagerService.Entities.McuStatus.Value" />
                    </Col>
                    <Col Span=12>
                        <Statistic Title="Uptime" Value="EntitiesManagerService.Entities.McuUptime.Value.ToString()" />
                    </Col>
                    <Col Span=12>
                        <Statistic Title="Wifi" Value="EntitiesManagerService.Entities.GpioWifi.Value.ToFrench()" />
                    </Col>
                    <Col Span=12>
                        <Statistic Title="NPR" Value="EntitiesManagerService.Entities.GpioNpr.Value.ToFrench()" />
                    </Col>
                </Row>
                </Body>
            </Card>
        </BadgeRibbon>
    </GridCol>
    <GridCol Span=8>
        <BadgeRibbon Text="@(EntitiesManagerService.Entities.WatchdogEnabled.Value ? "Activé" : "Désactivé")" 
                     Color="@(EntitiesManagerService.Entities.WatchdogEnabled.Value ? 
                                EntitiesManagerService.Entities.MpptAlertShutdown.Value ? "red" : "green"
                                : "blue")">
            <Card Title="Watchdog">
                <Body>
                <Row>
                    <Col Span=12>
                        <Statistic Title="Décompte" Value="EntitiesManagerService.Entities.WatchdogCounter.Value.ToString()" Suffix="s" />
                    </Col>
                    <Col Span=12>
                        <Statistic Title="Veille" Value="EntitiesManagerService.Entities.WatchdogPowerOffTime.Value.ToString()" Suffix="s" />
                    </Col>
                </Row>
                </Body>
            </Card>
        </BadgeRibbon>
    </GridCol>
    <GridCol Span=8>
        <BadgeRibbon Text="@DateTime.UtcNow.ToString("G")">
            <Card Title="Caméras">
                <Body>
                <Row Justify="center">
                    <Image Height="150px"
                           Src="/camera/last.webp"
                           Fallback="data:image/png;base64,"/>
                </Row>
                </Body>
            </Card>
        </BadgeRibbon>
    </GridCol>
    
    <GridCol Span="12">
        <Card Title="LoRa">
            <Body>
            <Timeline>
                @foreach ((string payload, DateTime date, bool isTx) message in MonitorService.State.Lora.All)
                {
                    <TimelineItem  Color="@(message.isTx ? "red" : "green")">
                        <div>@message.payload</div>
                        <div>@message.date.ToString("G")</div>
                    </TimelineItem>
                }
            </Timeline>
            </Body>
        </Card>
    </GridCol>
    <GridCol Span="12">
        <Card Title="Message serie">
            <Body>
            <Timeline>
                @foreach (Message message in MonitorService.State.LastMessagesReceived)
                {
                    <TimelineItem>
                        <div>@JsonSerializer.Serialize(message)</div>
                        <div>@message.ReceivedAt.ToString("G")</div>
                    </TimelineItem>
                }
            </Timeline>
            </Body>
        </Card>
    </GridCol>
</GridRow>

@code {
    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        
        _timer = new Timer(async _ => await UpdateData(), null, TimeSpan.Zero, TimeSpan.FromSeconds(10));
    }

    private async Task UpdateData()
    {
        await InvokeAsync(async () =>
        {
            StateHasChanged();
        });
    }

    public void Dispose()
    {
        _timer?.Dispose();
    }

    private Timer? _timer;
}