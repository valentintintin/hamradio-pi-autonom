@page "/"

@using Monitor.Extensions
@using Monitor.Services
@using Message = Monitor.Models.SerialMessages.Message
@using System.Globalization
@using Microsoft.EntityFrameworkCore
@using Monitor.Context
@using Monitor.Models.SerialMessages

@implements IDisposable
@inject IDbContextFactory<DataContext> DbContextFactory

<PageTitle>Tableau de bord</PageTitle>

<PageHeader Title="Tableau de bord" Subtitle="@MonitorService.State.LastMessagesReceived.LastOrDefault()?.ReceivedAt.ToFrench().ToString(CultureInfo.CurrentCulture)" />

<GridRow Gutter="(16, 16)" Justify="center">
    <GridCol Xs="24" Md="12" Lg="8">
        <Card Title="Système">
            <Body>
            <GridRow>
                <GridCol Xs="24" Sm="12">
                    <Statistic Title="CPU" Value="EntitiesManagerService.Entities.SystemCpu.Value" Suffix="%" />
                </GridCol>
                <GridCol Xs="24" Sm="12">
                    <Statistic Title="Uptime" Value="EntitiesManagerService.Entities.SystemUptime.Value.ToString()" />
                </GridCol>
                <GridCol Xs="24" Sm="12">
                    <Statistic Title="RAM" Value="EntitiesManagerService.Entities.SystemRam.Value" Suffix="%" />
                </GridCol>
                <GridCol Xs="24" Sm="12">
                    <Statistic Title="Disque" Value="EntitiesManagerService.Entities.SystemDisk.Value" Suffix="%" />
                </GridCol>
            </GridRow>
            </Body>
        </Card>
    </GridCol>
    <GridCol Xs="24" Md="12" Lg="8">
        <BadgeRibbon Text="@(EntitiesManagerService.Entities.MpptChargeCurrent.Value > 0 ? "En charge" : "En décharge")" 
                     Color="@(EntitiesManagerService.Entities.MpptChargeCurrent.Value > 0 ? "green" : "red")">
            <Card Title="Énergie">
                <Body>
                <GridRow>
                    <GridCol Xs="24" Sm="12">
                        <Statistic Title="Tension batterie" Value="@(EntitiesManagerService.Entities.BatteryVoltage.Value / 1000.0)" Suffix="V" />
                    </GridCol>
                    <GridCol Xs="24" Sm="12">
                        <Statistic Title="Tension panneau" Value="@(EntitiesManagerService.Entities.SolarVoltage.Value / 1000.0)" Suffix="V" />
                    </GridCol>
                    <GridCol Xs="24" Sm="12">
                        <Statistic Title="Courant batterie" Value="EntitiesManagerService.Entities.BatteryCurrent.Value" Suffix="mA" />
                    </GridCol>
                    <GridCol Xs="24" Sm="12">
                        <Statistic Title="Courant panneau" Value="EntitiesManagerService.Entities.SolarCurrent.Value" Suffix="mA" />
                    </GridCol>
                    <GridCol Xs="24" Sm="12">
                        <Statistic Title="Courant de charge" Value="EntitiesManagerService.Entities.MpptChargeCurrent.Value" Suffix="mA" />
                    </GridCol>
                    <GridCol Xs="24" Sm="12">
                        <Statistic Title="Température" Value="EntitiesManagerService.Entities.MpptTemperature.Value" Suffix="°C" />
                    </GridCol>
                </GridRow>
                </Body>
            </Card>
        </BadgeRibbon>
    </GridCol>
    <GridCol Xs="24" Md="12" Lg="8">
        <BadgeRibbon Text="@($"Il fait {(EntitiesManagerService.Entities.SolarIsDay.Value ? "jour" : "nuit")}")" 
                     Color="@(EntitiesManagerService.Entities.SolarIsDay.Value ? "orange" : "darkblue")">
            <Card Title="Météo">
                <Body>
                <GridRow>
                    <GridCol Xs="24" Sm="8">
                        <Statistic Title="Température" Value="EntitiesManagerService.Entities.WeatherTemperature.Value" Suffix="°C" />
                    </GridCol>
                    <GridCol Xs="24" Sm="8">
                        <Statistic Title="Humidité" Value="EntitiesManagerService.Entities.WeatherHumidity.Value" Suffix="%" />
                    </GridCol>
                    <GridCol Xs="24" Sm="8">
                        <Statistic Title="Pression" Value="EntitiesManagerService.Entities.WeatherPressure.Value" Suffix="hPa" />
                    </GridCol>
                </GridRow>
                </Body>
            </Card>
        </BadgeRibbon>
    </GridCol>
    <GridCol Xs="24" Md="12" Lg="8">
        <BadgeRibbon Text="@(EntitiesManagerService.Entities.StatusBoxOpened.Value ? "Boîte ouverte !" : "OK")" 
                     Color="@(EntitiesManagerService.Entities.StatusBoxOpened.Value ? "red" : "")">
            <Card Title="MCU">
                <Body>
                <GridRow>
                    <GridCol Xs="24" Sm="8">
                        <Statistic Title="État" Value="EntitiesManagerService.Entities.McuStatus.Value" />
                    </GridCol>
                    <GridCol Xs="24" Sm="8">
                        <Statistic Title="Uptime" Value="EntitiesManagerService.Entities.McuUptime.Value.ToString()" />
                    </GridCol>
                    <GridCol Xs="24" Sm="8">
                        <Statistic Title="Température boîte" Value="EntitiesManagerService.Entities.TemperatureRtc.Value" Suffix="°C" />
                    </GridCol>
                </GridRow>
                </Body>
            </Card>
        </BadgeRibbon>
    </GridCol>
    <GridCol Xs="24" Md="12" Lg="8">
        <BadgeRibbon Text="@(EntitiesManagerService.Entities.WatchdogEnabled.Value ? "Activé" : "Désactivé")" 
                     Color="@(EntitiesManagerService.Entities.WatchdogEnabled.Value ? 
                                EntitiesManagerService.Entities.MpptAlertShutdown.Value ? "red" : "green"
                                : "blue")">
            <Card Title="Watchdog">
                <Body>
                <GridRow>
                    <GridCol Xs="24" Sm="12">
                        <Statistic Title="Décompte" Value="EntitiesManagerService.Entities.WatchdogCounter.Value.ToString()" Suffix="s" />
                    </GridCol>
                    <GridCol Xs="24" Sm="12">
                        <Statistic Title="Veille" Value="EntitiesManagerService.Entities.WatchdogPowerOffTime.Value.ToString()" Suffix="s" />
                    </GridCol>
                </GridRow>
                </Body>
            </Card>
        </BadgeRibbon>
    </GridCol>
    <GridCol Xs="24" Md="12" Lg="8">
        <Card Title="Caméras">
            <Body>
            <GridRow Justify="center">
                <Image Height="150px"
                       Src="@($"/camera/last.jpg?{DateTime.UtcNow:yyyy-MM-dd-HH-mm}")"
                       Fallback="data:image/png;base64,"/>
            </GridRow>
            </Body>
        </Card>
    </GridCol>
    
    <GridCol Xs="24" Md="12">
        <Card Title="Derniers indicatifs entendus">
            <Body>
            @if (!_loraLastHeards.Any())
            {
                <Empty></Empty>
            }
            <Timeline>
                @foreach (var message in _loraLastHeards)
                {
                    <TimelineItem>
                        <strong>@message.Sender - @message.ReceivedAt.ToFrench().ToString(CultureInfo.CurrentCulture)</strong>
                        <pre>@message.Payload</pre>
                    </TimelineItem>
                }
            </Timeline>
            </Body>
        </Card>
        <Card Title="LoRa">
            <Body>
            @if (!_loras.Any())
            {
                <Empty></Empty>
            }
            <Timeline>
                @foreach (var message in _loras)
                {
                    <TimelineItem  Color="@(message.IsTx ? "red" : "green")">
                        <strong>@message.ReceivedAt.ToFrench().ToString(CultureInfo.CurrentCulture) - @(message.IsTx ? "TX" : "RX")</strong>
                        <pre>@message.Payload</pre>
                    </TimelineItem>
                }
            </Timeline>
            </Body>
        </Card>
    </GridCol>
    <GridCol Xs="24" Md="12">
        <Card Title="Message serie">
            <Body>
            @if (!MonitorService.State.LastMessagesReceived.Any())
            {
                <Empty></Empty>
            }
            <Timeline Reverse="true">
                @foreach (var message in MonitorService.State.LastMessagesReceived)
                {
                    <TimelineItem>
                        <strong>@message.ReceivedAt.ToFrench().ToString(CultureInfo.CurrentCulture) - @message.Type.ToUpper()</strong>
                        <pre>@message.ToString()</pre>
                    </TimelineItem>
                }
            </Timeline>
            </Body>
        </Card>
    </GridCol>
</GridRow>

@code {
    protected override async Task OnInitializedAsync()
    {
        _timer = new Timer(async _ => await UpdateData(), null, TimeSpan.Zero, TimeSpan.FromSeconds(5));
        await base.OnInitializedAsync();
    }

    private async Task UpdateData()
    {
        var context = await DbContextFactory.CreateDbContextAsync();
        _loras = await context.LoRas
            .OrderByDescending(l => l.Id)
            .Take(10)
            .Select(l => new LoraData
            {
                Type = "lora", 
                State = l.IsTx ? "tx" : "rx",
                Payload = l.Frame,
                ReceivedAt = l.CreatedAt
            }).ToListAsync();
        _loraLastHeards = context.LoRas
            .Where(e => !e.IsTx && e.Sender != null)
            .AsEnumerable()
            .GroupBy(e => e.Sender, 
                (sender, frames) => frames.OrderByDescending(l => l.Id).First())
            .Select(l => new LoraData
            {
                Type = "lora", 
                State = "rx",
                Payload = l.Frame,
                ReceivedAt = l.CreatedAt
            })
            .OrderByDescending(l => l.ReceivedAt)
            .ToList();
        
        await InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        _timer?.Dispose();
    }

    private List<LoraData> _loras = []; // If we use LoRa Entity class, We have error CS1503
    private List<LoraData> _loraLastHeards = [];
    private Timer? _timer;
}